<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05183D">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/backdrop_path"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/backdrop_path"
            app:layout_constraintTop_toTopOf="@+id/backdrop_path"
            android:id="@+id/detail_rating"
            android:layout_margin="4dp"
            android:background="@drawable/background_circle"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/backdrop_path"
            app:layout_constraintTop_toTopOf="@id/backdrop_path"
            android:layout_margin="4dp"
            android:id="@+id/liked_item"
            android:src="@drawable/ic_star__white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_date"
            app:layout_constraintLeft_toLeftOf="@id/backdrop_path"
            app:layout_constraintBottom_toBottomOf="@id/backdrop_path"
            android:layout_margin="5dp"
            android:background="#fff"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieName"
            app:layout_constraintLeft_toLeftOf="@id/backdrop_path"
            app:layout_constraintBottom_toTopOf="@id/movie_date"
            android:layout_margin="5dp"
            android:background="#fff"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionText"
            app:layout_constraintTop_toBottomOf="@id/backdrop_path"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#fff"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>